{% spaceless %}{% autoescape false %}
{{ docType() }}
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        
        {% block headMeta %}
            {{ headMeta().appendName('viewport', 'width=device-width, initial-scale=1.0') }}
        {% endblock headMeta %}
        
        <title>{% block title %}Painel Administrativo{% endblock %}</title>

        {% block headLink %}
            <link rel="stylesheet" href="{{ basePath() }}/sbadmin2/bower_components/bootstrap/dist/css/bootstrap.min.css" media="all">
            <link rel="stylesheet" href="{{ basePath() }}/sbadmin2/dist/css/timeline.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/sbadmin2/dist/css/sb-admin-2.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/sbadmin2/bower_components/metisMenu/dist/metisMenu.min.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/sbadmin2/bower_components/morrisjs/morris.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/sbadmin2/bower_components/font-awesome/css/font-awesome.min.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/select2/select2-bootstrap.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/select2/select2.css" media="screen">
            <link rel="stylesheet" href="{{ basePath() }}/animate.css" media="screen">
        {% endblock headLink %}
        
        {% block headScript %}
            {{ headScript() }}
        {% endblock headScript %}
    </head>
    <body>
        <div id="wrapper">
            {% set user = userIdentity('admin') %}
            
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url('home-admin') }}">Painel Administrativo</a>
                </div>
                <!-- /.navbar-header -->

                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="{{ url('admin-usuarios', {'action': 'editar', 'id': attribute(user, 'id')}) }}"><i class="fa fa-user fa-fw"></i> Meu Usu√°rio</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="{{ url('admin-logout') }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                            </li>
                        </ul>
                        <!-- /.dropdown-user -->
                    </li>
                    <!-- /.dropdown -->
                </ul>
                <!-- /.navbar-top-links -->

                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        {{ navigation('Navigation').menu().setPartial(['partials/navigation.phtml', 'default']).render() }}
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>
                <!-- /.navbar-static-side -->
            </nav>
            
            <div id="page-wrapper">
                {% block content %}
                    {{ content | raw }}
                {% endblock content %}
            </div>
        </div>
        
        {% block inlineScript %}        
            <script src="/js/jquery.min.js"></script>
            <script src="{{ basePath() }}/select2/select2.js"></script>
            <script src="{{ basePath() }}/select2/select2_locale_pt-BR.js"></script>
            <script src="{{ basePath() }}/sbadmin2/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
            <script src="{{ basePath() }}/sbadmin2/bower_components/metisMenu/dist/metisMenu.min.js"></script>
            <script src="{{ basePath() }}/sbadmin2/dist/js/sb-admin-2.js"></script>
            
            <script>
                $(document).ready(function() {
                    $('form:first *:input[type!=hidden]:first').not('.data').focus();
                    $('select').css('border', '0').select2();
                });
            </script>
        {% endblock inlineScript %}
    </body>
</html>
{% endautoescape %}{% endspaceless %}